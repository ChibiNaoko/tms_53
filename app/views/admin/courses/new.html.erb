<% provide :title, t("static_pages.course") %>
<div class="row">
  <div class="col-md-4">
    <h2><%= t "layouts.create_course" %></h2>
    <%= form_for [:admin, @course] do |f| %>
      <%= render "shared/error_messages", object: @course %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control" %>

      <%= f.submit t("layouts.create_course"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
