<div id="courses">
  <div class="tt-main">
    <div class="tt-content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-12 col-sm-8">
            <div class="tt-course">
              <div class="tt-course-summary">
                <h4><%= @subject.title %></h4>
                <p><%= @subject.description %></p>
              </div>
              <div class="tt-subject">
                <p><%= t "admin.list_task_in_subject" %></p>
                <% @subject.tasks.each do |task| %>
                  <div class="media">
                    <div class="media-body">
                      <h6 class="media-heading"><%= link_to task.title, "#" %></h6>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
          <div class="col-xs-12 col-sm-4">
            <div class="tt-trainer-summary hidden-xs">
              <div class="tt-course-logo">
                <%= image_tag("https://www.codeschool.com/assets/paths/badge-ruby-8fd86979e1ec714f4f41dd3cabedc651.svg",
                  alt: t("admin.image_name"), class: "menu_icon") %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
