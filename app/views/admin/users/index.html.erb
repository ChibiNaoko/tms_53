<div class="row">
  <div class="col-md-10 col-offset-2">
    <h2><%= t "admin.list_user" %></h2>
    <table class="table table-striped table-hover">
      <thead>
        <th><%= t "admin.subject_title" %></th>
        <th><%= t "admin.subject_description" %></th>
        <th><%= t "admin.subject_delete" %></th>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.name, user %></td>
            <td><%= user.email %></td>
            <td>
              <%= link_to [:admin, user], method: :delete, data: {confirm: t("admin.sure")},
                class: "btn btn-primary btn-xs" do %>
                <span class="glyphicon glyphicon-eye-open"></span> <%= t "admin.destroy_user" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to [:new, :user], class: "btn btn-primary btn-xs" do %>
      <span class="glyphicon glyphicon-eye-open"></span> <%= t "layouts.new_user" %>
    <% end %>
  </div>
</div>
