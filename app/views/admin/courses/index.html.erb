<div class="row">
  <div class="col-md-10 col-offset-2">
    <h2><%= t "admin.list_course" %></h2>
    <table class="table table-striped table-hover">
      <thead>
        <th><%= t "admin.course_name" %></th>
        <th><%= t "admin.course_des" %></th>
        <th></th>
        <th></th>
      </thead>
      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><%= course.name %></td>
            <td><%= course.description %></td>
            <td><%= link_to t("admin.delete_course"), "#" %></td>
            <td><%= link_to t("admin.edit_course"), edit_admin_course_path(course) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
